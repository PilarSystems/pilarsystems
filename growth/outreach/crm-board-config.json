{
  "version": "1.0.0",
  "description": "Minimal CRM Kanban board configuration for lead management",
  "board": {
    "name": "Lead Pipeline",
    "columns": [
      {
        "id": "new",
        "name": "Neu",
        "color": "#3B82F6",
        "automation": {
          "on_enter": [
            "Send welcome email",
            "Assign to sales rep (round-robin)",
            "Set follow-up reminder (24h)"
          ]
        }
      },
      {
        "id": "contacted",
        "name": "Kontaktiert",
        "color": "#8B5CF6",
        "automation": {
          "on_enter": [
            "Log contact attempt",
            "Set follow-up reminder (3 days)"
          ]
        }
      },
      {
        "id": "qualified",
        "name": "Qualifiziert",
        "color": "#10B981",
        "automation": {
          "on_enter": [
            "Send demo booking link",
            "Notify sales manager",
            "Set follow-up reminder (7 days)"
          ]
        }
      },
      {
        "id": "demo_scheduled",
        "name": "Demo geplant",
        "color": "#F59E0B",
        "automation": {
          "on_enter": [
            "Send calendar invite",
            "Send demo preparation email",
            "Set reminder 1h before demo"
          ]
        }
      },
      {
        "id": "proposal_sent",
        "name": "Angebot versendet",
        "color": "#EF4444",
        "automation": {
          "on_enter": [
            "Send proposal email",
            "Set follow-up reminder (3 days)",
            "Track proposal opens"
          ]
        }
      },
      {
        "id": "negotiation",
        "name": "Verhandlung",
        "color": "#F97316",
        "automation": {
          "on_enter": [
            "Notify sales manager",
            "Set follow-up reminder (2 days)"
          ]
        }
      },
      {
        "id": "won",
        "name": "Gewonnen",
        "color": "#22C55E",
        "automation": {
          "on_enter": [
            "Send onboarding email",
            "Create customer account",
            "Notify success team",
            "Update revenue metrics"
          ]
        }
      },
      {
        "id": "lost",
        "name": "Verloren",
        "color": "#6B7280",
        "automation": {
          "on_enter": [
            "Request feedback",
            "Set re-engagement reminder (90 days)",
            "Update loss reason stats"
          ]
        }
      }
    ],
    "card_fields": [
      {
        "id": "name",
        "label": "Name",
        "type": "text",
        "required": true
      },
      {
        "id": "email",
        "label": "E-Mail",
        "type": "email",
        "required": true
      },
      {
        "id": "phone",
        "label": "Telefon",
        "type": "phone",
        "required": false
      },
      {
        "id": "studio_name",
        "label": "Studio",
        "type": "text",
        "required": false
      },
      {
        "id": "city",
        "label": "Stadt",
        "type": "text",
        "required": false
      },
      {
        "id": "source",
        "label": "Quelle",
        "type": "select",
        "options": ["Cold Email", "Referral", "Website", "Social Media", "Event", "Other"],
        "required": true
      },
      {
        "id": "value",
        "label": "Wert (€)",
        "type": "number",
        "required": false
      },
      {
        "id": "notes",
        "label": "Notizen",
        "type": "textarea",
        "required": false
      },
      {
        "id": "last_contact",
        "label": "Letzter Kontakt",
        "type": "date",
        "required": false,
        "auto_update": true
      },
      {
        "id": "next_followup",
        "label": "Nächstes Follow-up",
        "type": "date",
        "required": false
      }
    ],
    "filters": [
      {
        "id": "assigned_to_me",
        "label": "Mir zugewiesen",
        "default": true
      },
      {
        "id": "overdue",
        "label": "Überfällig"
      },
      {
        "id": "high_value",
        "label": "Hoher Wert (>500€)"
      },
      {
        "id": "no_activity_7d",
        "label": "Keine Aktivität (7 Tage)"
      }
    ],
    "views": [
      {
        "id": "kanban",
        "name": "Kanban",
        "default": true
      },
      {
        "id": "list",
        "name": "Liste"
      },
      {
        "id": "calendar",
        "name": "Kalender"
      }
    ]
  },
  "automations": [
    {
      "id": "auto_followup",
      "name": "Automatisches Follow-up",
      "trigger": "next_followup_date_reached",
      "actions": [
        "Send follow-up email (template based on stage)",
        "Create activity log",
        "Set new follow-up date (+3 days)"
      ]
    },
    {
      "id": "stale_lead_alert",
      "name": "Inaktive Leads",
      "trigger": "no_activity_for_14_days",
      "actions": [
        "Notify assigned sales rep",
        "Suggest re-engagement email",
        "Flag as 'at risk'"
      ]
    },
    {
      "id": "high_value_alert",
      "name": "Hochwertiger Lead",
      "trigger": "lead_value_above_1000",
      "actions": [
        "Notify sales manager",
        "Assign to senior sales rep",
        "Priority flag"
      ]
    },
    {
      "id": "demo_reminder",
      "name": "Demo-Erinnerung",
      "trigger": "demo_scheduled_1h_before",
      "actions": [
        "Send reminder email to lead",
        "Send reminder to sales rep",
        "Prepare demo materials"
      ]
    }
  ],
  "email_templates": {
    "welcome": {
      "subject": "Willkommen! Nächste Schritte",
      "body": "Hi {{first_name}},\n\nvielen Dank für dein Interesse an PILAR SYSTEMS!\n\nIch bin {{sales_rep_name}} und begleite dich durch den Prozess.\n\n**Nächste Schritte:**\n1. Kurzer Call (15 Min) → [Calendly-Link]\n2. Demo ansehen → [Demo-Link]\n3. Fragen klären\n\nWann passt es dir?\n\nBeste Grüße,\n{{sales_rep_name}}"
    },
    "followup_contacted": {
      "subject": "Re: PILAR SYSTEMS Demo",
      "body": "Hi {{first_name}},\n\nich wollte nochmal nachhaken wegen unserem Gespräch.\n\nHast du dir die Demo angesehen?\nGibt es noch offene Fragen?\n\nGerne können wir auch einen kurzen Call machen.\n\nBeste Grüße,\n{{sales_rep_name}}"
    },
    "followup_proposal": {
      "subject": "Re: Angebot PILAR SYSTEMS",
      "body": "Hi {{first_name}},\n\nich wollte nochmal auf unser Angebot zurückkommen.\n\nGibt es noch Fragen oder Bedenken?\nKann ich irgendwie helfen?\n\nLass uns kurz telefonieren: [Calendly-Link]\n\nBeste Grüße,\n{{sales_rep_name}}"
    },
    "lost_feedback": {
      "subject": "Kurzes Feedback?",
      "body": "Hi {{first_name}},\n\nschade, dass es diesmal nicht geklappt hat.\n\nKannst du mir kurz sagen, warum?\nDein Feedback hilft uns, besser zu werden.\n\n[Feedback-Formular]\n\nVielleicht klappt's ja beim nächsten Mal!\n\nBeste Grüße,\n{{sales_rep_name}}"
    }
  },
  "metrics": {
    "conversion_rates": {
      "new_to_contacted": "Target: 80%",
      "contacted_to_qualified": "Target: 40%",
      "qualified_to_demo": "Target: 60%",
      "demo_to_proposal": "Target: 70%",
      "proposal_to_won": "Target: 50%",
      "overall_win_rate": "Target: 15%"
    },
    "velocity": {
      "avg_time_to_first_contact": "Target: <24h",
      "avg_time_to_qualified": "Target: <7 days",
      "avg_time_to_won": "Target: <30 days"
    },
    "activity": {
      "emails_sent_per_day": "Target: 20+",
      "calls_made_per_day": "Target: 10+",
      "demos_per_week": "Target: 5+"
    }
  },
  "implementation_notes": {
    "database": "Use existing Lead model, add 'stage' and 'assigned_to' fields",
    "ui": "Build with drag-and-drop library (e.g., dnd-kit)",
    "real_time": "Use Supabase real-time subscriptions for live updates",
    "mobile": "Responsive design, touch-friendly drag-and-drop"
  }
}
